---------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------
Solution
----------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------
#include<bits/stdc++.h>
using namespace std;
#define int long long 
int n;int cost[100100];int dp[100100][5];
string s;string k="hard";
int rec(int i,int t){
    if(t==4){return 1e18;}
    if(i>=n){return 0;}
    if(dp[i][t]!=-1){return dp[i][t];}
    int ans=0;
    if(s[i]!=k[t]){ans=rec(i+1,t);}
    else{
        ans=cost[i]+rec(i+1,t);
        ans=min(ans,rec(i+1,t+1));
    }
    dp[i][t]=ans;
    return dp[i][t];
}
signed main(){
    ios_base::sync_with_stdio(0);cin.tie(0);cout.tie(0);
    int t;cin>>t;
    while(t--){
       cin>>n>>s;
       for(int i=0;i<n;i++){cin>>cost[i];}
       memset(dp,-1,sizeof(dp));
       int ans=rec(0,0);
       cout<<ans<<endl;
    }
    return 0;
}
--------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------
Solution
-----------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------
#include<bits/stdc++.h>
using namespace std;
#define int long long 
signed main(){
    ios_base::sync_with_stdio(0);cin.tie(0);cout.tie(0);
    int t;cin>>t;
    while(t--){
        int n;cin>>n;
        string s;cin>>s;
        int cost[n];
        for(int i=0;i<n;i++){cin>>cost[i];}
        int dp[4]={0};
        for(int i=0;i<n;i++){
            if(s[i]=='h')dp[0]+=cost[i];
            else if(s[i]=='a')dp[1]=min(dp[0],dp[1]+cost[i]);
            else if(s[i]=='r')dp[2]=min(dp[1],dp[2]+cost[i]);
            else if(s[i]=='d')dp[3]=min(dp[2],dp[3]+cost[i]);
        }
        cout<<dp[3]<<endl;
    }
    return 0;
}
