#include<bits/stdc++.h>
using namespace std;
#define int long long 
signed main(){
    ios_base::sync_with_stdio(0);cin.tie(0);cout.tie(0);
    int t;cin>>t;
    while(t--){
        int n,k;cin>>n>>k;
        string str;cin>>str;
        string s[3];
        for(int i=1;i<=n;i++){
            if(i%3==1)s[0]+='R';
            else if(i%3==2)s[0]+='G';
            else s[0]+='B';
        }
        for(int i=1;i<=n;i++){
            if(i%3==1)s[1]+='G';
            else if(i%3==2)s[1]+='B';
            else s[1]+='R';
        }
        for(int i=1;i<=n;i++){
            if(i%3==1)s[2]+='B';
            else if(i%3==2)s[2]+='R';
            else s[2]+='G';
        }
        int ans=1e18;
        for(int j=0;j<3;j++){
            int a[n];
            for(int i=0;i<n;i++){
                a[i]=0;
                if(str[i]!=s[j][i])a[i]=1;
            }
            for(int i=1;i<n;i++){
                a[i]+=a[i-1];
            }
            ans=min(ans,a[k-1]);
            for(int i=k;i<n;i++){
                ans=min(ans,a[i]-a[i-k]);
            }
        }
        cout<<ans<<endl;
    }
    return 0;
}
--------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------
Solution 1
--------------------------------------------------------------------------------------------------------------------------------------------------------------------------------
#include <bits/stdc++.h>
using namespace std;

#define IOS ios::sync_with_stdio(0); cin.tie(0); cout.tie(0);
#define int long long

signed main() {
    IOS
    int t;
    cin >> t;
    while (t--) {
        int n, k;
        cin >> n >> k;
        string str;
        cin>>str;
        string s[3];
        for (int i = 1; i <= n; ++i) {
            if(i%3 == 1) s[0]+='R';
            else if(i%3 == 2) s[0]+='G';
            else s[0]+='B';
        }
        for (int i = 1; i <= n; ++i) {
            if(i%3 == 1) s[1]+='G';
            else if(i%3 == 2) s[1]+='B';
            else s[1]+='R';
        }
        for (int i = 1; i <= n; ++i) {
            if(i%3 == 1) s[2]+='B';
            else if(i%3 == 2) s[2]+='R';
            else s[2]+='G';
        }
        int ans = 1e18;
        for (int j = 0; j <= 2; ++j) {
            int a[n];
            for (int i = 0; i < n; ++i) {
                a[i] = 0;
                if(str[i] != s[j][i]) a[i] = 1;
            }
            for (int i = 1; i < n; ++i) {
                a[i] += a[i-1];
            }
            ans = min(ans, a[k-1]);
            for (int i = k; i < n; ++i) {
                ans = min(ans, a[i] - a[i-k]);
            }
        }
        cout << ans << "\n";
    }
    return 0;
}
