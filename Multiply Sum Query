-------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------
Solution
----------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------
#include<bits/stdc++.h>
using namespace std;
#define ll long long int
const int mod=1e9+7;
signed main(){
    ios_base::sync_with_stdio(0);cin.tie(0);cout.tie(0);
    ll n,q;cin>>n>>q;
    ll a[n+1]={0};ll b[n+1]={0};
    for(int i=1;i<=n;i++){cin>>a[i];}
    for(int i=1;i<=n;i++){b[i]=(i*a[i])%mod;}
    for(int i=2;i<=n;i++){
        a[i]+=a[i-1];
        a[i]%=mod;
        b[i]+=b[i-1];
        b[i]%=mod;
    }
    while(q--){
        ll l,r;cin>>l>>r;
        ll ans=(1ll)*(b[r]-b[l-1])+(1-l)*(a[r]-a[l-1])*(1ll);
        ans%=mod;
        if(ans<0) ans+=mod;
        cout<<ans<<endl;
    }
    return 0;
}
